{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "region": "us-east-1",
    "source_ami": "ami-024a64a6685d05041",
    "ssh_username": "ubuntu",
    "ami_description": "EC2 AMI drachtio server v0.8.2 Ubuntu 18.04", 
    "instance_type": "t2.medium",
    "drachtio_version": "v0.8.2",
    "cloud_provider": "aws"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "{{user `ssh_username`}}",
    "ami_name": "drachtio-server-{{user `drachtio_version`}}-{{isotime |clean_ami_name}}",
    "ami_description": "{{user `ami_description`}}", 
    "tags": {
      "role": "drachtio-server"
    },
    "run_tags": {
      "role": "drachtio-server"
    }
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done",
        "sudo apt-get update",
        "sudo apt-get -y install python"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "./playbooks/drachtio.yaml",
      "extra_arguments": [ "--extra-vars", "drachtioBranch={{user `drachtio_version`}} cloud_provider={{user `cloud_provider`}}" ]
    }
  ]
}